<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- MAIN ACTIVITY-->
        <style name="CustomToolbar">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">50dp</item>
        </style>

        <style name="ContainerComponents">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">250dp</item>
            <item name="android:background">@drawable/container_components</item>
            <item name="android:layout_marginTop">150dp</item>
            <item name="android:layout_marginLeft">20dp</item>
            <item name="android:layout_marginRight">20dp</item>
        </style>

        <style name="CustomSwitchStyle">
            <item name="android:layout_width">300dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_margin">40dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">20sp</item>
        </style>

        <style name="CustomEditTextStyle">
            <item name="android:layout_width">300dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/edit_text</item>
            <item name="android:padding">20dp</item>
            <item name="android:layout_marginLeft">40dp</item>
            <item name="android:layout_marginRight">40dp</item>
            <item name="android:layout_marginTop">50dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textColorHint">@color/deep_gray</item>
        </style>

        <style name="CustomButtonStyle">
            <item name="android:layout_width">250dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginLeft">40dp</item>
            <item name="android:layout_marginRight">40dp</item>
            <item name="android:layout_marginTop">20dp</item>
            <item name="android:background">@drawable/button</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">15sp</item>
        </style>

        <!-- PANEL ACTIVITY-->
        <style name="CustomTextViewTittle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textAlignment">center</item>
            <item name="android:textSize">35sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textColor">@color/gray</item>
        </style>

        <style name="CustomTextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">25sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:layout_marginTop">30dp</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="CustomSpinner">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:minHeight">50dp</item>
            <item name="android:spinnerMode">dropdown</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:layout_marginLeft">50dp</item>
            <item name="android:layout_marginRight">50dp</item>
        </style>

        <style name="CustomTextInputNumber">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:inputType">number|numberDecimal</item>
            <item name="android:textColorHint">@color/white</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">35sp</item>
        </style>

        <!-- ENERGY ACTIVITY-->

        <!-- SEARCH ACTIVITY-->
        <style name="CustomWebView">
            <item name="android:layout_width">370dp</item>
            <item name="android:layout_height">300dp</item>
            <item name="android:layout_marginTop">5dp</item>
        </style>

        <style name="CustomTextViewLat">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textAlignment">center</item>
            <item name="android:layout_marginTop">5dp</item>
            <item name="android:layout_marginRight">170dp</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="CustomTextViewLatResult">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textAlignment">center</item>
            <item name="android:layout_marginTop">5dp</item>
            <item name="android:layout_marginRight">170dp</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="CustomTextViewLon">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textAlignment">center</item>
            <item name="android:layout_marginTop">5dp</item>
            <item name="android:layout_marginLeft">170dp</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="CustomTextViewLonResult">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textAlignment">center</item>
            <item name="android:layout_marginTop">5dp</item>
            <item name="android:layout_marginLeft">170dp</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="CustomTextViewSubTittle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">30sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:layout_marginTop">20dp</item>
            <item name="android:layout_marginLeft">30dp</item>
            <item name="android:layout_marginRight">30dp</item>
        </style>

        <style name="CustomTextViewCompleteAddress">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:layout_marginLeft">30dp</item>
            <item name="android:layout_marginRight">30dp</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="ContainerComponentsSearch">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">250dp</item>
            <item name="android:background">@drawable/container_components</item>
            <item name="android:layout_marginTop">30dp</item>
            <item name="android:layout_marginLeft">20dp</item>
            <item name="android:layout_marginRight">20dp</item>
        </style>

        <style name="CustomTextViewError">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">12sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:layout_marginTop">40dp</item>
            <item name="android:layout_marginLeft">30dp</item>
            <item name="android:layout_marginRight">30dp</item>
            <item name="android:textColor">@color/red</item>
        </style>

        <!-- CALCULATE ACTIVITY-->
        <style name="CustomTextViewCalculateTittle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">30sp</item>
            <item name="android:layout_marginTop">5dp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="CustomScrollView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:background">@drawable/container_components</item>
            <item name="android:layout_marginTop">30dp</item>
            <item name="android:layout_marginBottom">100dp</item>
            <item name="android:layout_marginLeft">20dp</item>
            <item name="android:layout_marginRight">20dp</item>
        </style>

        <style name="CustomTextViewCalculateSubTittle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">30sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:layout_marginTop">50dp</item>
        </style>

        <style name="CustomGenericTextView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">15sp</item>
            <item name="android:layout_marginTop">5dp</item>
            <item name="android:textColor">@color/deep_blue_sky</item>
        </style>

        <style name="CustomCalculateButtonHome">
            <item name="android:layout_width">250dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginLeft">40dp</item>
            <item name="android:layout_marginRight">40dp</item>
            <item name="android:layout_marginBottom">30dp</item>
            <item name="android:background">@drawable/button</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">15sp</item>
        </style>

        <style name="CustomCalculateButtonStyle">
            <item name="android:layout_width">250dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginLeft">20dp</item>
            <item name="android:layout_marginRight">20dp</item>
            <item name="android:layout_marginTop">50dp</item>
            <item name="android:background">@drawable/button</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">15sp</item>
        </style>

</resources>